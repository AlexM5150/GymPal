<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".UserInfo">

        <!-- Gender Spinner -->
        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center"
            android:text="Gender"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/gender_spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textborder"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="16dp"/>

        <!-- Height Input -->
        <TextView
            android:id="@+id/height_txt"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center"
            android:text="Height"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/feet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Feet"
                android:textColor="@android:color/white"
                android:inputType="number"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/inches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Inches"
                android:textColor="@android:color/white"
                android:inputType="number"
                android:textColorHint="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Current Weight Slider -->
        <TextView
            android:id="@+id/c_weight_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Current Weight"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/current_weight_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="50.0"
            android:valueTo="500.0"
            app:thumbColor="@color/white"
            app:trackColor="@color/white"/>

        <!-- Goal Weight Slider -->
        <TextView
            android:id="@+id/g_weight_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Goal Weight"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/goal_weight_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="50.0"
            android:valueTo="500.0"
            app:thumbColor="@color/white"
            app:trackColor="@color/white"/>

        <TextView
            android:id="@+id/activity_level_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Activity Level"
            android:textColor="#FFFFFF"
            android:textSize="20sp">
        </TextView>

        <Spinner
            android:id="@+id/act_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textborder"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/age_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Age:"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/age_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your age"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/style_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lifting Style"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/style_spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textborder"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="-7dp" />

        <TextView
            android:id="@+id/location_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Location:"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your location"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray" />
        <!-- Bio Input -->
        <TextView
            android:id="@+id/bio_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio:"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/bio_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tell us about yourself"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray" />

        <!-- Finish Button -->
        <Button
            android:id="@+id/finish_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/buttonstyle1"
            android:text="FINISH"
            android:textColor="@android:color/white"
            app:backgroundTint="@null">

        </Button>

    </LinearLayout>

</ScrollView>