<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/black"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    tools:context=".Login">

    <FrameLayout
        android:id="@+id/login_background_top"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <include layout="@layout/fragment_landing_top" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/login_background_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/login_background_top">

        <include layout="@layout/fragment_landing_bottom" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>