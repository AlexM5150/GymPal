<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Add any additional UI elements here -->

    <ImageView
        android:id="@+id/ProfilePicSwipe"
        android:layout_width="320dp"
        android:layout_height="462dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/batman" />

    <Button
        android:id="@+id/yes"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/ProfilePicSwipe"
        android:layout_alignParentStart="true"
        android:layout_marginStart="248dp"
        android:layout_marginTop="28dp"
        android:text="MATCH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePicSwipe"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/skip"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/ProfilePicSwipe"
        android:layout_alignParentStart="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="28dp"
        android:text="SKIP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePicSwipe"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/displayNameSwipe"
        android:layout_width="123dp"
        android:layout_height="32dp"
        android:layout_marginTop="420dp"
        android:text="textView"
        android:textSize="30dp"
        app:fontFamily="@font/open_sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="true" />
</androidx.constraintlayout.widget.ConstraintLayout>