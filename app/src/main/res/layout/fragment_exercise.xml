<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:text="Choose a day: "
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/day_spinner"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/textborder"
            android:spinnerMode="dropdown"
            android:textSize="20sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Enter your exercise:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/exercise_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:hint="e.g. Squats (5 sets)"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="text"
            android:maxLines="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/exercise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Exercises"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>



    <LinearLayout
        android:id="@+id/monday_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/tuesday_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/wednesday_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/thursday_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/friday_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/saturday_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/sunday_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"/>

    <!-- Add exercise button -->
    <Button
        android:id="@+id/add_exercise_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Exercise" />

    <!-- Clear exercises button -->
    <Button
        android:id="@+id/clear_exercises_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Exercises" />
</LinearLayout>
