<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gympal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project1">
        <activity android:name="com.example.gympal.splash_screen"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.gympal.Profile" />
        <activity
            android:name="com.example.gympal.Navigation"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.Project1.NoActionBar" />
        <activity android:name="com.example.gympal.DevInfo"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name="com.example.gympal.UserInfo"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name="com.example.gympal.Signup"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name="com.example.gympal.Login"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>